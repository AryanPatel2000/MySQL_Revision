create table emp_dept (
    name varchar(100),
    id INT NOT NULL auto_increment,
    PRIMARY KEY (id)
);

create table emp(
    name varchar(50),
     id INT NOT NULL auto_increment,
     city varchar(25),
     dept_id int,
     primary key(id),
     foreign key(dept_id)
     references 
     emp_dept(id)

);

