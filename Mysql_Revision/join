--inner join

SELECT emp.id,emp.name as Employee_name, emp_dept.name as Department_name 
FROM emp 
INNER JOIN emp_dept
ON emp.dept_id = emp_dept.id ;

SELECT emp.id, emp.name as Employee_name, emp_dept.name as Department_name 
FROM emp 
INNER JOIN emp_dept
ON emp.dept_id = emp_dept.id 
where emp.name like 'r%';


